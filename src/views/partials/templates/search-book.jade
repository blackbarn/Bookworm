div.panel.panel-default
    div.panel-heading
        h3.panel-title {{book.title}}
    div.panel-body
        span.book-author.text-muted
            small by
                a(data-ui-sref='searchAuthor({query: book.authorName})')  {{book.authorName}}
                |  - {{book.published | date:'yyyy'}}
        div.media
            img.media-object.pull-left(data-ng-src='{{book.imageSmall}}', alt='{{book.title}} Cover')
            div.media-body {{book.description | words: 75}}
    div.panel-footer
        div.btn-group
            button.btn.btn-default.btn-sm(data-ng-click='addBook(book)') Add Book