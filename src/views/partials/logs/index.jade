div.page-header.hidden-xs
    h1 Logs
        small whats going on?
pager(data-total-items='totalItems', data-page='currentPage', on-select-page='onSelectPage(page)')
div.table-responsive
    table.table.table-condensed.table-hover.logs
        thead
            tr
                th(style='width:18%;') Time
                th(style='width:4%;') Level
                th Message
        tfoot
        tbody
            tr.animate(data-ng-repeat='log in logs', data-ng-class='"log-" + log.level')
                td.time {{log.timestamp | date:'medium'}}
                td.level {{log.level}}
                td.message {{log.message}}
