extends layout


block nav
    toaster-container(toaster-options='{"time-out": 3000}')
    nav.navbar.navbar-default(data-ng-controller='NavCtrl', role='navigation')
        div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#/')
                span.brand-emphasis Book
                span worm
        div.collapse.navbar-collapse.navbar-ex1-collapse
            ul.nav.navbar-nav
                li(data-ui-route='/authors', data-ng-class='{active: $uiRoute}')
                    a(data-ui-sref='authors')
                        span.glyphicon.glyphicon-list-alt
                        |  Authors
                li.dropdown(data-ui-route='/books', data-ng-class='{active: $uiRoute}')
                    a.dropdown-toggle(data-toggle='dropdown')
                        span.glyphicon.glyphicon-book
                        |  Books
                        span.caret
                    ul.dropdown-menu
                        li
                            a(data-ui-sref='books({status: ""})')
                                span.glyphicon.glyphicon-book
                                |  All
                        li
                            a(data-ui-sref='books({status: "wanted"})')
                                span.glyphicon.glyphicon-heart
                                |  Wanted
                            a(data-ui-sref='books({status: "snatched"})')
                                span.glyphicon.glyphicon-cloud
                                |  Snatched
                        li
                            a(data-ui-sref='books({status: "downloaded"})')
                                span.glyphicon.glyphicon-cloud-download
                                |  Downloaded
                        li
                            a(data-ui-sref='books({status: "skipped"})')
                                span.glyphicon.glyphicon-forward
                                |  Skipped
                        li
                            a(data-ui-sref='books({status: "excluded"})')
                                span.glyphicon.glyphicon-ban-circle
                                |  Excluded
                li(data-ui-route='/logs', data-ng-class='{active: $uiRoute}')
                    a(data-ui-sref='logs')
                        span.glyphicon.glyphicon-list
                        |  Logs
                li.dropdown(data-ui-route='/settings', data-ng-class='{active: $uiRoute}')
                    a.dropdown-toggle(data-toggle='dropdown')
                        span.glyphicon.glyphicon-cog
                        |  Settings
                        span.caret
                    ul.dropdown-menu
                        li
                            a(data-ui-sref='settings')
                                span.glyphicon.glyphicon-cog
                                |  General
                        li
                            a(data-ui-sref='settings-search-newznab')
                                span.glyphicon.glyphicon-search
                                |  Searching - Newznab
                        li
                            a(data-ui-sref='settings-search-googlebooks')
                                span.glyphicon.glyphicon-book
                                |  Searching - Google Books
                        li
                            a(data-ui-sref='settings-download')
                                span.glyphicon.glyphicon-cloud-download
                                |  Downloading
                        li
                            a(data-ui-sref='settings-notify')
                                span.glyphicon.glyphicon-info-sign
                                |  Notifying
                        li
                            a(data-ui-sref='settings-postProcess')
                                span.glyphicon.glyphicon-retweet
                                |  Post Processing
                        li
                            a(data-ui-sref='settings-manage')
                                span.glyphicon.glyphicon-wrench
                                |  Managing
                li(data-ui-route='/search', data-ng-class='{active: $uiRoute}')
                    a(data-ui-sref='search')
                        span.glyphicon.glyphicon-search
                        |  Search
block view

    div.row(data-ui-view)


